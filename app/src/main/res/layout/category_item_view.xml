<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewCategoryItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/search_item_elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/margin_s"
    app:cardBackgroundColor="@color/white"
    android:layout_marginVertical="@dimen/margin_s">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_s"
        android:paddingBottom="@dimen/margin_s">

        <ImageView
            android:id="@+id/imageViewThumbnail"
            android:layout_width="@dimen/search_item_image_width"
            android:layout_height="@dimen/search_item_image_height"
            android:layout_marginVertical="@dimen/margin_s"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="@dimen/empty_size"
            android:layout_height="wrap_content"
            style="@style/titleItem"
            tools:text="Motorola G100"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/imageViewThumbnail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/margin_s"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/priceItem"
            tools:text="$1600000"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            android:layout_marginTop="@dimen/margin_xs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>