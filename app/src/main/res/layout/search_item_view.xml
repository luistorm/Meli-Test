<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewSearchItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/search_item_elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/search_item_horizontal_margin"
    android:layout_marginBottom="@dimen/margin_s"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewThumbnail"
            android:layout_width="@dimen/search_item_image_width"
            android:layout_height="@dimen/search_item_image_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/margin_s"
            android:layout_marginVertical="@dimen/margin_s"/>

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/titleItem"
            tools:text="Motorola G100"
            app:layout_constraintTop_toTopOf="@id/imageViewThumbnail"
            app:layout_constraintLeft_toRightOf="@id/imageViewThumbnail"
            android:layout_marginStart="@dimen/margin_s"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/priceItem"
            tools:text="$1600000"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            android:layout_marginTop="@dimen/margin_xs"
            app:layout_constraintLeft_toLeftOf="@id/textViewTitle"/>

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/descriptionItem"
            tools:text="Disponibles: 100"
            app:layout_constraintTop_toBottomOf="@id/textViewPrice"
            android:layout_marginTop="@dimen/margin_xs"
            app:layout_constraintLeft_toLeftOf="@id/textViewPrice"/>

        <TextView
            android:id="@+id/textViewCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/descriptionItem"
            tools:text="Usado"
            app:layout_constraintTop_toBottomOf="@id/textViewQuantity"
            android:layout_marginTop="@dimen/margin_xs"
            app:layout_constraintLeft_toLeftOf="@id/textViewQuantity"
            android:background="@drawable/bg_used_item"
            android:padding="@dimen/padding_xs"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textViewFreeDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/descriptionItem"
            tools:text="EnvÃ­o Gratis"
            app:layout_constraintTop_toTopOf="@id/textViewCondition"
            app:layout_constraintLeft_toRightOf="@id/textViewCondition"
            android:layout_marginStart="@dimen/margin_s"
            android:background="@drawable/bg_free_delivery_item"
            android:padding="@dimen/padding_xs"
            android:textColor="@color/black"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>