<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/used_item"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/containerHeader">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_s"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/margin_s"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textViewProductTitle"
            android:layout_width="@dimen/empty_size"
            android:layout_height="wrap_content"
            style="@style/productDetailTitle"
            tools:text="Hola Que hace"
            app:layout_constraintTop_toTopOf="@id/imageViewBack"
            app:layout_constraintBottom_toBottomOf="@id/imageViewBack"
            app:layout_constraintLeft_toRightOf="@id/imageViewBack"
            android:layout_marginHorizontal="@dimen/margin_s"
            app:layout_constraintRight_toRightOf="parent"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="marquee"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/empty_size"
        app:layout_constraintTop_toBottomOf="@id/containerHeader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_m">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewItem"
                android:layout_width="@dimen/detail_image_width"
                android:layout_height="@dimen/detail_image_height"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/margin_s" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/priceItem"
                tools:text="Precio: $1600000"
                app:layout_constraintTop_toBottomOf="@id/imageViewItem"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/textViewQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/descriptionItem"
                tools:text="Disponibles: 100"
                app:layout_constraintTop_toBottomOf="@id/textViewPrice"
                android:layout_marginTop="@dimen/margin_xs"
                app:layout_constraintLeft_toLeftOf="@id/textViewPrice"/>

            <TextView
                android:id="@+id/textViewCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/descriptionItem"
                tools:text="Usado"
                app:layout_constraintTop_toBottomOf="@id/textViewQuantity"
                app:layout_constraintLeft_toLeftOf="@id/textViewPrice"
                android:layout_marginTop="@dimen/margin_xs"
                android:background="@drawable/bg_used_item"
                android:padding="@dimen/padding_xs"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textViewFreeDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/descriptionItem"
                android:text="@string/free_delivery"
                app:layout_constraintTop_toTopOf="@id/textViewCondition"
                app:layout_constraintLeft_toRightOf="@id/textViewCondition"
                android:layout_marginStart="@dimen/margin_xs"
                android:background="@drawable/bg_free_delivery_item"
                android:padding="@dimen/padding_xs"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textViewAttributes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/descriptionItem"
                tools:text="Atributos:"
                app:layout_constraintTop_toBottomOf="@id/textViewCondition"
                app:layout_constraintLeft_toLeftOf="@id/textViewPrice"
                android:layout_marginTop="@dimen/margin_xs"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerOtherProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textViewAttributes"
                android:layout_marginTop="@dimen/margin_s"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewOther"
                    android:layout_width="@dimen/empty_size"
                    android:layout_height="wrap_content"
                    style="@style/productDetailOther"
                    android:text="@string/other_products"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/margin_s"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/textViewOther"
                    android:layout_marginTop="@dimen/margin_s"/>

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationViewLoader"
                    android:layout_width="@dimen/loader_width"
                    android:layout_height="@dimen/loader_height"
                    app:lottie_rawRes="@raw/loader"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    app:layout_constraintTop_toBottomOf="@id/textViewOther"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/margin_s"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>